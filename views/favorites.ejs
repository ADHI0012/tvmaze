<% layout('layouts/boilerplate') %>

<div class="container my-5">
  <h1 class="mb-4">Your Favorites</h1>

  <% if (favorites && favorites.length > 0) { %>
  <div class="row g-5">
    <% favorites.forEach(favorite => { %>
    <div class="col-md-6 col-lg-4">
      <div class="card h-100 text-light" style="background-color: #2e3236">
        <img
          src="<%= favorite.image?.medium %>"
          class="card-img-top"
          alt="<%= favorite.name %>"
          style="height: 250px; object-fit: cover"
        />
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= favorite.name %></h5>
          <p class="card-text text-white small">
            <%= favorite.genres?.join(', ') %>
          </p>
          <p class="card-text flex-grow-1">
            <span class="badge bg-secondary"
              >‚≠ê <%= favorite.rating?.average || 'N/A' %>/10</span
            >
          </p>
          <div>
            <a href="/<%= favorite.id %>" class="btn btn-primary btn-sm"
              >View Details</a
            >
            <a
              href="/favorites/remove/<%= favorite.id %>"
              class="btn btn-danger btn-sm"
              >Remove</a
            >
          </div>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
  <% } else { %>
  <div class="alert alert-info text-center py-5">
    <h4>No favorites yet!</h4>
    <p>Start adding your favorite favorites.</p>
    <a href="/" class="btn btn-primary">Browse favorites</a>
  </div>
  <% } %>
</div>
