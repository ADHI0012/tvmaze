<%- layout('layouts/boilerplate') %>

<link rel="stylesheet" href="/css/reviewBgImage.css" />

<div class="d-flex flex-column vh-100 align-items-center">
  <div class="text-center my-4">
    <p
      class="text-uppercase mb-1"
      style="color: #b0b0b0; letter-spacing: 2px; font-size: 0.9rem"
    >
      Reviews of
    </p>
    <h1 class="fw-bold" style="font-size: 2.5rem; color: white">
      <%= show.name %>
    </h1>
  </div>
  <hr class="border border-secondary opacity-50 w-75" />

  <div class="mb-2">
    <% for (let review of reviews) { %>
    <div
      class="card mb-2 text-light"
      style="width: 48rem; background-color: #2c2f33"
    >
      <div class="card-body">
        <h5 class="card-title"><%=review.user.username %></h5>
        <h6 class="card-subtitle mb-2" style="color: #f0f0f0">⭐⭐⭐⭐⭐</h6>
        <p class="card-text"><%= review.text %></p>
      </div>
    </div>

    <% } %>
  </div>
</div>
