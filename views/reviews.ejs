<%- layout('layouts/boilerplate') %>

<h1 class="display-4 mb-4 mt-3"><%= show.name %></h1>
<div class="row">
  <div class="col-md-3">
    <img
      src="<%= show.image.medium %>"
      alt=""
      class="rounded float-left img-fluid"
      style="width: 550px; height: 400px"
    />
  </div>
  <div class="col-md-9">
    <h2 class="display-5">Popular Reviews</h2>
    <% for (let review of reviews) { %>
    <div
      class="card mb-2 text-light"
      style="width: 48rem; background-color: #2c2f33"
    >
      <div class="card-body">
        <h5 class="card-title"><%=review.user.username %></h5>
        <h6 class="card-subtitle mb-2" style="color: #f0f0f0">5 stars</h6>
        <p class="card-text"><%= review.text %></p>
        <a href="#" class="card-link">Card link</a>
        <a href="#" class="card-link">Another link</a>
      </div>
    </div>

    <% } %>
  </div>
</div>
