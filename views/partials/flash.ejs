<% if (success.length) { %>
<div class="row">
  <div class="col-md-6 offset-3">
    <div
      class="alert alert-success alert-dismissible fade show mt-3"
      role="alert"
      style="background-color: #006420; color: #f5f5f5; text-align: center"
    >
      <%= success %>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
</div>
<% } %> <% if (error.length) { %>
<div class="row">
  <div class="col-md-6 offset-3">
    <div
      class="alert alert-danger alert-dismissible fade show mt-3"
      role="alert"
    >
      <%= error %>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
</div>
<% } %>
